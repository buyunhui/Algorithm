{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python",
            "type": "shell",
            "command": "C:\\ProgramData\\Anaconda3\\python",
            "args": ["${file}"]
        },
        
        {

        "label": "build-debug",
        "command": "g++",
        "args": ["-g","${file}","-o","${fileBasenameNoExtension}.exe"], 
        "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
                  }
         }
       },

       {

        "label": "build-cpp",
        "command": "g++",
        "args": ["${file}","-o","${fileBasenameNoExtension}.exe"], 
        "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
                  }
         }
       }
    ]

   
}
